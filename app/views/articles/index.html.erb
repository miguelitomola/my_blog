<% @page_name = "Bienvenid@" %>

<%= render 'image_aside' %>
<%= render 'dates_aside' %>

<section class="articles_container">
    <% @articles.each do |article| %>
      <article class="article">
        
        <h2 class="h2 art_title">
          <%= link_to "#{article.title}", article_path(article) %>
        </h2>
        <h3 class="h3 date">
          <% datetime = article.created_at %>
          <%= "#{datetime.day} de #{datetime.strftime('%B')} de #{datetime.year}" %>
        </h3>
        <p>
          <% if article.body.length < 350 %>
            <%= article.body %>
          <% else %>
            <%= article.body[0,350] %>
            <%= link_to '[...]', article_path(article) %>
          <% end %>
        </p>
      
      </article> 
    <% end %>
</section>

