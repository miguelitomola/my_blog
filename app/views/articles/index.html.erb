<% @page_name = "Bienvenid@" %>
<section class="articles_container">
  <div class="articles_container_1">
  <% if @articles_1.any? %>
    <% @articles_1.each do |article| %>
        <% if article != nil %>
        <article class="article">
          
          <h2 class="h2 art_title">
            <%= link_to "#{article.title}", article_path(article) %>
          </h2>
          <% if article.articles_date != nil %>
            <h3 class="h3 date">
              <% art_date = article.articles_date %>
              <%= "#{art_date.day} de #{art_date.month} de #{art_date.year}" %>
            </h3>
          <% end %>
          <div>
            <% if article.body.length < 350 %>
              <%= simple_format(article.body) %>
            <% else %>
              <%= article.body[0,350] %>
              <%= link_to '[...]', article_path(article) %>
            <% end %>
          </div>
          <div class="number_comments">
            <% number_comments = article.comments.count %>
            <% if number_comments == 1 %>
              <% number_comments = "#{number_comments} comentario ⌨" %>
            <% else %>
              <% number_comments = "#{number_comments} comentarios ⌨" %>
            <% end %>
              <%= link_to "#{number_comments}", article_path(article) + "#comments" %>
          </div>

        </article>
      <% end %> 
    <% end %>
  <% end %>
  </div>
  <div class="articles_container_2">
  <% if @articles_2.any? %>
    <% @articles_2.each do |article| %>
        <% if article != nil %>
        <article class="article">
          
          <h2 class="h2 art_title">
            <%= link_to "#{article.title}", article_path(article) %>
          </h2>
          <% if article.articles_date != nil %>
            <h3 class="h3 date">
              <% art_date = article.articles_date %>
              <%= "#{art_date.day} de #{art_date.month} de #{art_date.year}" %>
            </h3>
          <% end %>
          <div>
            <% if article.body.length < 350 %>
              <%= article.body %>
            <% else %>
              <%= article.body[0,350] %>
              <%= link_to '[...]', article_path(article) %>
            <% end %>
          </div>
          <div class="number_comments">
            <% number_comments = article.comments.count %>
            <%= link_to "#{number_comments} comentarios ⌨", article_path(article) + "#comments" %>
          </div>
      
        </article>
      <% end %> 
    <% end %>
  <% end %>
  </div>
</section>

