<h1 class="h1 title">el blog de miguelitomola</h1>

<section class="title underline">
  <h2 class="h2 inline">
    <%= @article.title %>
  </h2>
  <span>
    - <%= link_to 'Editar', edit_article_path(@article) %> ||
  </span>
  <span>
    <%= link_to 'Eliminar', article_path(@article),
        method: :delete,
        data: { confirm: "¿Seguro que quieres eliminar #{@article.title}?" } %> -
  </span>
</section>
 
<p class="article">
  <%= @article.body %>
</p>

<h2>Comentarios</h2>
<%= render @article.comments %>

<h2>Añade un comentario:</h2>
<%= render 'comments/form' %>

